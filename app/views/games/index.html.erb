<div class="padding">
<!-- Index for Games -->
  <% flash.each do |name, msg| %>
    <div class="alert <%= name == 'error' ? 'alert-danger' : 'alert-info' %>">
      <div class="container">
        <%= msg %>
      </div>
    </div>
  <% end %>  

  <div class="container">
    <div class="row">
        <% @games.each do |game| %>
          <div class="game-center">
            <p>
              <strong>Name:</strong> <%= link_to game.name, game_path(game) %><br>
             	<strong>Developer:</strong> <%= game.company %><br>
             	<strong>Publisher:</strong> <%= game.publisher %><br>
          		<strong>Image:</strong>
             		<%= link_to game_path(game) do %>
             			
                  <div class="boxart">
                    <%= image_tag game.image %>
                  </div> 

                  <br>
             		<% end %>
             	<strong>Release Date:</strong><%= game.release_date%><br>   	
            </p>
          </div> 
        <% end %>
    </div>
  </div>
</div>